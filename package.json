{
  "name": "knowledge-explorer-backend-new",
  "version": "1.0.0",
  "description": "Knowledge Explorer Backend API Server",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev:backend": "nodemon src/index.js",
    "dev:frontend": "vite",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:security": "vitest run src/__tests__/utils/security.test.ts",
    "test:components": "vitest run src/__tests__/components/",
    "test:e2e": "playwright test",
    "test:all": "npm run test:run && npm run test:e2e",
    "docker:build": "docker build -f Dockerfile.backend -t knowledge-explorer-backend .",
    "docker:build:frontend": "docker build -f Dockerfile.frontend -t knowledge-explorer-frontend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -f",
    "deploy:dev": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh development",
    "deploy:staging": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh staging",
    "deploy:prod": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh production",
    "db:backup": "pg_dump $DATABASE_URL > backups/backup-$(date +%Y%m%d_%H%M%S).sql",
    "db:restore": "psql $DATABASE_URL < backups/latest.sql",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "monitoring:start": "docker-compose --profile monitoring up -d prometheus grafana",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "migrate:db": "node src/services/databaseMigration.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "security:audit": "npm audit --audit-level=high",
    "precommit": "npm run lint:fix && npm run format && npm run test:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^10.7.0",
    "@sentry/react": "^10.7.0",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/dompurify": "^3.0.5",
    "@types/react-router-dom": "^5.3.3",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "highlight.js": "^11.11.1",
    "immer": "^10.1.1",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.540.0",
    "marked": "^16.2.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "streamdown": "^1.0.11",
    "tailwind-merge": "^3.3.1",
    "winston": "^3.17.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash-es": "^4.17.12",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest-environment-jsdom": "^30.1.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
